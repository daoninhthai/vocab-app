{
  "name": "vocabmaster",
  "version": "1.0.0",
  "description": "VocabMaster - Smart Vocabulary Learning with Spaced Repetition",
  "main": "electron.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "init-db": "node server/init-db.js",
    "electron": "electron .",
    "electron-dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "dist": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.vocabmaster.app",
    "productName": "VocabMaster",
    "mac": {
      "category": "public.app-category.education",
      "target": ["dmg", "zip"]
    },
    "files": [
      "electron.js",
      "server/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "server/**/*"
    ],
    "directories": {
      "output": "dist"
    }

  },
  "keywords": [
    "vocabulary",
    "spaced-repetition",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
